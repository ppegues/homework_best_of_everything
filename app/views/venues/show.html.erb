<div class="page-header">
  <h1>Venue #<%= @venue.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @venue.name %></dd>

  <dt>Neighborhood</dt>
  <dd><%= @neighborhood.name %></dd>

  <dt>Address</dt>
  <dd><%= @venue.address %></dd>

  <dt>Latitude</dt>
  <dd><%= @latitude %></dd>

  <dt>Longitude</dt>
  <dd><%= @longitude %></dd>

  <dt>Map</dt>
  <dd>
    <!-- Code for Google Map -->
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
    <script>
      var map;
      function initialize() {

        var myLatlng = new google.maps.LatLng(<%= @latitude %>, <%= @longitude %>);

        var mapOptions = {
          zoom: 15,
          center: myLatlng
        };

        map = new google.maps.Map(document.getElementById('map-canvas'),
          mapOptions);

        var marker = new google.maps.Marker({
              position: myLatlng,
              map: map,
              title: '<%= @venue.name %>'
          });
      }

      google.maps.event.addDomListener(window, 'load', initialize);

    </script>
    <div id="map-canvas"></div>
  </dd>

  <dt>Favorites</dt>
  <dd>
    <ul>
      <% @favorites.each do |fav| %>
      <% dish = Dish.find(fav.dish_id) %>
      <% user = User.find(fav.user_id) %>
        <li><%= dish.name.capitalize %> is liked by <%= user.username.capitalize %></li>
      <% end %>
    </ul>
  </dd>
</dl>


